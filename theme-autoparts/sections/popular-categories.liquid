<section class="container">
  <h2>{{ section.settings.heading }}</h2>
  <div class="category-grid">
    {% for block in section.blocks %}
      <a class="category-tile" {{ block.shopify_attributes }} href="{{ block.settings.link }}">
        {% if block.settings.image %}
          <img src="{{ block.settings.image | img_url: '720x' }}" alt="">
        {% else %}
          <div style="height:220px;background:#e9edf2"></div>
        {% endif %}
        <div class="category-overlay">
          <div style="font-weight:700">{{ block.settings.title }}</div>
          <span class="tile-cta">Voir tous les produits</span>
        </div>
      </a>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Catégories populaires",
  "settings": [{"type":"text","id":"heading","label":"Titre","default":"Catégories populaires"}],
  "blocks": [
    {"type":"category","name":"Catégorie","settings":[
      {"type":"text","id":"title","label":"Titre","default":"Moteur"},
      {"type":"image_picker","id":"image","label":"Image"},
      {"type":"url","id":"link","label":"Lien"}
    ]}
  ],
  "max_blocks": 8,
  "presets": [{"name":"Catégories populaires","category":"Collections"}]
}
{% endschema %}

